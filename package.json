{
  "name": "tagviewer",
  "version": "1.0.0",
  "description": "A simple program that allows viewing of images under any tag, as well as modifying those tags.",
  "main": "main.js",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "fs-extra": "^9.0.0",
    "image-size": "^0.8.3",
    "trash": "^6.1.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.52",
    "@electron-forge/maker-deb": "^6.0.0-beta.52",
    "@electron-forge/maker-rpm": "^6.0.0-beta.52",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.52",
    "@electron-forge/maker-zip": "^6.0.0-beta.52",
    "@linthtml/linthtml": "^0.4.1",
    "electron": "^9.0.4",
    "eslint": "^7.3.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "stylelint": "^13.6.0",
    "stylelint-config-standard": "^20.0.0"
  },
  "scripts": {
    "start": "electron-forge start",
    "startdev": "NODE_ENV=development electron .",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "keywords": [
    "tag",
    "viewer",
    "media",
    "files",
    "sorting",
    "tags",
    "categorization",
    "organization"
  ],
  "author": "Matt Fellenz",
  "license": "GPL-3.0-only",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "tagviewer"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "productName": "TagViewer",
            "productDescription": "A simple program that allows viewing of images under any tag, as well as modifying those tags.",
            "version": "1.0.0",
            "section": ["utils"],
            "name": "tagviewer",
            "depends": [],
            "categories": ["Utility"],
            "description": "A simple program that allows viewing of images under any tag, as well as modifying those tags.",
            "genericName": "Media Viewer",
            "icon": "icons/png/512x512.png"
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
